}

.gwt-SuggestBoxPopup {
	background-color: #ffffff;
	border: solid 1px blue;
	height: 200px;
	width: 300px;
	overflow-y: auto;
	cursor: pointer;
	cursor: hand;
}

.gwt-SuggestBoxPopup.item {
