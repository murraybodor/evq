/***************************
    History Widget styles
***************************/
.queryHistoryWidget {
	font-size: 80%;
	cursor: pointer;
	cursor: hand;
	border-left: 1px solid #666;
	border-right: 1px solid #666;
	border-bottom: 1px solid #666;
}

.queryHistoryWidget td {
	border-top: 1px solid #fff;
	border-bottom: 1px solid #fff;
	padding: 2px 5px 2px 5px;
	white-space: nowrap;
}

.queryHistoryWidgetHeader {
	padding: 0px;
	color: #ffffff;
	background-color: #000099;
	font-weight: bold;
}

.queryHistoryWidgetHeader td {
	padding: 2px 5px 2px 5px;
	border-top: 1px solid #666;
	border-bottom: 1px solid #666;
}

.queryHistoryWidgetCommonRow {
	background: #ffff99;
}

.queryHistoryWidgetSelectedRow {
	background: #eee;
}

.queryHistoryWidgetSelectedRow td {
	border-bottom: 1px solid #666;
	border-top: 1px solid #666;
}

